                       end;
             ltin_ID : begin

                       end;
             ltth_TH : begin

                       end;
             lthi_IN : begin

                       end;
                       // feedback Mohamed Ammar // v. 3.1.0.63
             ltar_SA : begin
                          If ( Pos( 'A>', pItem ) > 0 ) then
                          begin
                            pMenuList[ pSeqPerm ] := IntToStr( pSeq - 1 ) + 'عرض.'  ;
                          end

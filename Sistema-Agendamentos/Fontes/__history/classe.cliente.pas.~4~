unit classe.cliente;

interface

uses FireDAC.Comp.Client;

type
  TCliente = class

    private
      FConecao       : TFDConnection;

      Fid_cliente    : Integer;
      Fdt_nascimento : TDateTime;

      Fds_cliente,
      Fnr_cpf,
      Fnr_rg,
      Fnr_cep,
      Fds_endereco,
      Fnr_numero,
      Fds_complemento,
      Fds_bairro,
      Fds_cidade,
      Fds_uf,
      Fnr_telefone,
      Fnr_telefone2,
      Fds_obs        : String;

    public
      property Conexao        : TFDConnection read FConecao        write
      property id_cliente     : Integer       read Fid_cliente     write
      property dt_nascimento  : TDateTime     read Fdt_nascimento  write
      property ds_cliente     : String        read Fds_cliente     write
      property nr_cpf         : String        read Fnr_cpf         write
      property nr_rg          : String        read Fnr_rg          write
      property nr_cep         : String        read Fnr_cep         write
      property ds_endereco    : String        read Fds_endereco    write
      property nr_numero      : String        read Fnr_numero      write
      property ds_complemento : String        read Fds_complemento write
      property ds_bairro      : String        read Fds_bairro      write
      property ds_cidade      : String        read Fds_cidade      write
      property ds_uf          : String        read Fds_uf          write
      property nr_telefone    : String        read Fnr_telefone    write
      property nr_telefone2   : String        read Fnr_telefone2   write
      property ds_obs         : String        read Fds_obs         write

      constructor Create (Conexao : TFDConnection);
      destructor Destroy; Override;
  end;

implementation

end.

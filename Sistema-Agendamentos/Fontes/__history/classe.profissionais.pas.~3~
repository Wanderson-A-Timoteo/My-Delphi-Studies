unit classe.profissionais;

interface

uses
  FireDAC.Comp.Client;

type
  TProfissionais = class
    private
      FConexao          : TFDConnection;
      FId_Profissional  : Integer;
      Fds_profissional  : String;
      Fds_especialidade : String;
      Fnr_contato       : String;
    public
      constructor Create (Conexao : TFDConnection);
      destructor Destroy; Override;

      property Conexao          : TFDConnection read FConexao;
      property Id_Profissional  : Integer       read FId_Profissional;
      property ds_profissional  : String        read Fds_profissional;
      property ds_especialidade : String        read Fds_especialidade;
      property nr_contato       : String        read Fnr_contato;
  end;

implementation

{ TProfissionais }

constructor TProfissionais.Create(Conexao: TFDConnection);
begin
  Conexao :=  Conexao
end;

destructor TProfissionais.Destroy;
begin

  inherited;
end;

end.
